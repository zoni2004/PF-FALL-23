#include <stdio.h>
#include <math.h>

int main() {
float x1;
float x2;
int a;
int b;
int c;
do{
printf("Please enter the coffecient of x^2: \n");
scanf("%d" ,&a); //Taking input for calculation value
printf("Please enter the coffecient of x: \n");
scanf("%d" ,&b);
printf("Please enter the constant: \n");
scanf("%d" ,&c);
x1 = -1*b + sqrt((b*b) - 4*a*c)/2*a;
x2 = -1*b + sqrt((b*b) - 4*a*c)/2*a;
printf ("First value of x is: %f \n");
printf ("Second value of x is: %f \n");
}while (a>0);

return 0;
} //end main

